@{
  Layout = "_Layout";
}
<h1>Students</h1>


@if (Model.Count == 0)
{
 <h4>There are no students registered</h4>
}

@foreach(var student in Model)
{
  <li><a href = "/students/@student.id">@student.name</a> was enrolled on @student.date</li>
}
<br>
<p><a href = "/students/new">Add a new Student</a></p>
<p><a href="/">Return to Main Page</a></p>
